<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_reg_background"
    android:scrollbarSize="16dp"
    tools:context=".fragment.player.ProfileSettingsAccountFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextColor="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Аккаунт"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:fontFamily="@font/century_gothic"
            android:layout_gravity="center"
            android:id="@+id/tv1324" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:layout_editor_absoluteX="371dp"
            tools:layout_editor_absoluteY="11dp">

            <View
                android:id="@+id/v_red_acc"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_red_pen"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/century_gothic"
        android:text="Данные"
        android:textColor="#515151"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/et_surnameAcc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar_profile" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/century_gothic"
        android:text="Телефон"
        android:textColor="#515151"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/et_patronymicAcc" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/century_gothic"
        android:text="Почта"
        android:textColor=" #515151"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/et_phoneNumAcc" />

    <EditText
        android:id="@+id/et_surnameAcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="#515151"
        android:ems="10"
        android:hint="Фамилия"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/et_nameAcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#515151"
        android:ems="10"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="@+id/et_surnameAcc"
        app:layout_constraintStart_toStartOf="@+id/et_surnameAcc"
        app:layout_constraintTop_toBottomOf="@+id/et_surnameAcc" />

    <EditText
        android:id="@+id/et_patronymicAcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="#515151"
        android:ems="10"
        android:hint="Никнейм"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="@+id/et_nameAcc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_nameAcc"
        app:layout_constraintTop_toBottomOf="@+id/et_nameAcc" />


    <EditText
        android:id="@+id/et_phoneNumAcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#515151"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="@+id/et_patronymicAcc"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:id="@+id/et_emailAcc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#515151"
        android:ems="10"
        android:inputType="none"
        android:maxLength="50"
        android:textColor="#FFFFFF"
        android:textColorHint="#515151"
        app:layout_constraintEnd_toEndOf="@+id/et_phoneNumAcc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>